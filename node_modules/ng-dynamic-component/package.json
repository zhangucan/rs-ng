{
  "name": "ng-dynamic-component",
  "version": "4.0.3",
  "description": "Dynamic components with full life-cycle support for inputs and outputs for Angular",
  "sideEffects": false,
  "main": "bundles/ng-dynamic-component.umd.js",
  "module": "bundles/ng-dynamic-component.es5.js",
  "es2015": "bundles/ng-dynamic-component.es2015.js",
  "typings": "ng-dynamic-component.d.ts",
  "keywords": [
    "angular",
    "angular2",
    "ng",
    "dynamic",
    "component",
    "input",
    "output",
    "life-cycle"
  ],
  "author": "Alex Malkevich <malkevich.alex@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gund/ng-dynamic-component.git"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "peerDependencies": {
    "@angular/common": "^7.0.0",
    "@angular/core": "^7.0.0",
    "rxjs": "^6.0.0",
    "tslib": "^1.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/dynamic/**/*(!.spec).ts": [
      "tslint -p tsconfig.json -c tslint.json --fix",
      "git add"
    ],
    "src/**/*.{ts,js,json,?css}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{html}": [
      "prettyhtml",
      "git add"
    ]
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "<rootDir>/src"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupJest.ts",
    "collectCoverageFrom": [
      "src/dynamic/**/*.ts",
      "!src/dynamic/index.ts",
      "!src/dynamic/dynamic.module.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
